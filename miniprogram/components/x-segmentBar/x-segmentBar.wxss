.segmentBar {
  width: 100%;
  height: 100rpx;
  /* background-color: orange;*/
  display: flex;
}

.segmentItem {
  flex: 1;
  /* border: 1px solid red; */
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1px solid #ccc;
}

.segmentBar .title {
  font-size: 30rpx;
  color: #666;
}

.segmentBar .subTitle {
  font-size: 20rpx;
  color: #999;
}

.active .title {
  color: rgb(99, 284, 233) !important;
}
.active .subTitle {
  color: rgb(99, 284, 233) !important;
}
